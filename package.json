{
  "name": "neurapath-homepage",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "cf:dev": "wrangler pages dev .svelte-kit/cloudflare --compatibility-date=2025-07-22",
    "cf:deploy": "bun run build && wrangler pages deploy .svelte-kit/cloudflare",
    "cf:deploy:prod": "bun run build && wrangler pages deploy .svelte-kit/cloudflare --env production"
  },
  "devDependencies": {
    "@lucide/svelte": "^0.525.0",
    "@sveltejs/adapter-cloudflare": "^7.1.0",
    "@sveltejs/kit": "^2.25.1",
    "@sveltejs/vite-plugin-svelte": "^6.1.0",
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/typography": "^0.5.15",
    "@tailwindcss/vite": "^4.0.0",
    "clsx": "^2.1.1",
    "svelte": "^5.36.13",
    "svelte-check": "^4.3.0",
    "tailwind-merge": "^3.3.1",
    "tailwind-variants": "^1.0.0",
    "tailwindcss": "^4.0.0",
    "tslib": "^2.8.1",
    "tw-animate-css": "^1.3.5",
    "typescript": "^5.8.3",
    "vite": "npm:rolldown-vite@latest",
    "wrangler": "^4.25.1"
  },
  "description": "Neurapath homepage - Beautiful and powerful learning platform built with SvelteKit and deployed on Cloudflare Workers",
  "main": "svelte.config.js",
  "keywords": [
    "learning",
    "education",
    "flashcards",
    "spaced-repetition",
    "sveltekit",
    "cloudflare"
  ],
  "author": "Martin Jakobsson <hello@neurapath.com>",
  "license": "MIT"
}
