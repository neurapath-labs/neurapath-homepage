# Environment Configuration
# Copy this file to .env and fill in your actual values

# Application Environment
NODE_ENV=development
ENVIRONMENT=development

# Site Configuration
PUBLIC_SITE_URL=http://localhost:5173
PUBLIC_SITE_NAME=Neurapath
PUBLIC_SITE_DESCRIPTION="Beautiful and powerful learning based on scientific methods"

# Contact Information
PUBLIC_CONTACT_EMAIL=hello@neurapath.com
PUBLIC_SUPPORT_EMAIL=support@neurapath.com

# Social Media Links (optional)
PUBLIC_TWITTER_URL=https://twitter.com/neurapath
PUBLIC_LINKEDIN_URL=https://linkedin.com/company/neurapath
PUBLIC_GITHUB_URL=https://github.com/neurapath

# Analytics (optional)
PUBLIC_GOOGLE_ANALYTICS_ID=
PUBLIC_PLAUSIBLE_DOMAIN=
PUBLIC_MIXPANEL_TOKEN=

# Feature Flags (optional)
PUBLIC_ENABLE_TESTIMONIALS=true
PUBLIC_ENABLE_BLOG_LINK=true
PUBLIC_ENABLE_PRICING_LINK=true

# API Endpoints (if needed)
PUBLIC_API_BASE_URL=https://api.neurapath.com
PUBLIC_NEWSLETTER_ENDPOINT=

# Cloudflare Configuration (for local development)
CLOUDFLARE_ACCOUNT_ID=
CLOUDFLARE_API_TOKEN=

# Marketing/CRM Integration (optional)
HUBSPOT_API_KEY=
MAILCHIMP_API_KEY=
CONVERTKIT_API_KEY=

# Error Tracking (optional)
SENTRY_DSN=
SENTRY_AUTH_TOKEN=

# Performance Monitoring (optional)
PUBLIC_VERCEL_ANALYTICS_ID=
PUBLIC_SPLITBEE_TOKEN=
